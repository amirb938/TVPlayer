<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="defaultAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButtonStyle</item>
    </style>

    <style name="alertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="positiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TvButtonSubtitle" parent="ExoStyledControls.Button.Bottom.CC">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_subtitle</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonQuality" parent="ExoStyledControls.Button.Bottom.CC">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_setting</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonNext" parent="ExoMediaButton.Next">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_next</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonPrev" parent="ExoMediaButton.Previous">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_prev</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonFastForward" parent="ExoMediaButton.FastForward">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_fast_forward</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonRewind" parent="ExoMediaButton.Rewind">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_fast_rewind</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonPause" parent="ExoMediaButton.Pause">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_pause</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvButtonPlay" parent="ExoMediaButton.Play">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:background">@drawable/selector_controller_button</item>
    </style>

    <style name="TvTextViewDuration" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvTextViewPosition" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvRelativeParent">
        <item name="android:background">#99000000</item>
    </style>

    <style name="TvTextViewAd" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#80FFFFFF</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>

    </style>

</resources>